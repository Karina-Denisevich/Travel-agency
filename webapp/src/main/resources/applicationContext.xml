<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	    http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
	    http://www.springframework.org/schema/context
	    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="classpath:service-context.xml"/>

    <mvc:annotation-driven/>

    <context:component-scan base-package="com.github.karina_denisevich.travel_agency.web.advice"/>
    <context:component-scan base-package="com.github.karina_denisevich.travel_agency.web.controller"/>

    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="com.github.karina_denisevich.travel_agency.web.converter.dto_to_entity.DtoToUserImpl"/>
                <bean class="com.github.karina_denisevich.travel_agency.web.converter.entity_to_dto.UserToDtoImpl"/>
                <bean class="com.github.karina_denisevich.travel_agency.web.converter.entity_to_dto.TourToDtoImpl"/>
                <!--<bean class="com.github.karina_denisevich.travel_agency.web.converter.entity_to_dto.OrderToDto"/>-->
            </set>
        </property>
    </bean>
</beans>